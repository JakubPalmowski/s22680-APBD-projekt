@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
body {
    
    justify-content: center;
    align-items: center;
}

h1 {
    color: rgb(39, 169, 211);
    
} 

.col-md-4 {
    display: flex;
    justify-content: center;
    align-items: center;
}

.container{
    
}

.pb-3{
   
    justify-content: center;
    align-items: center;
    margin-left:300px;
}

.form-control {
    background-color: rgb(230, 255, 255);
    color:rgb(39, 169, 211);
    
}

label
{
    color:rgb(39, 169, 211);
}

a:visited
{
color:white;

}

a:link
{
color:white;

}




</style>

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
           
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Login"></label>
                <input asp-for="Input.Login" class="form-control" />
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button class="btn btn-primary"> <a href="login">BACK</a></></button>
            <button type="submit" class="btn btn-primary">REGISTER</button>

        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}